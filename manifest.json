{
  "dxt_version": "0.1",
  "name": "gimp-mcp",
  "version": "0.1.0",
  "description": "GIMP MCP Server - Professional Image Editing via MCP",
  "long_description": "A Model Context Protocol (MCP) server that enables AI agents to perform professional image editing operations using GIMP (GNU Image Manipulation Program). Provides comprehensive image manipulation capabilities including layer management, filters, transforms, and batch processing.",
  "author": {
    "name": "Sandra Schipal",
    "email": "sandra@sandraschi.dev",
    "url": "https://github.com/sandraschi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sandraschi/gimp-mcp"
  },
  "homepage": "https://github.com/sandraschi/gimp-mcp",
  "documentation": "https://github.com/sandraschi/gimp-mcp/blob/main/README.md",
  "support": "https://github.com/sandraschi/gimp-mcp/issues",
  "license": "MIT",
  "keywords": ["gimp", "image-editing", "mcp", "automation", "batch-processing"],
  "icon": "dxt/assets/icon.png",
  "server": {
    "type": "python",
    "entry_point": "gimp_mcp.main:main",
    "mcp_config": {
      "command": "python",
      "args": [
        "-m", "gimp_mcp.main",
        "--mode", "stdio",
        "--log-level", "INFO"
      ],
      "cwd": "src",
      "env": {
        "PYTHONPATH": "src",
        "PYTHONUNBUFFERED": "1"
      }
    }
  },
  "user_config": {
    "gimp_executable": {
      "type": "file",
      "title": "GIMP Executable",
      "description": "Path to GIMP executable (gimp-3.0.exe on Windows, gimp on macOS/Linux)",
      "required": true,
      "default": "C:\\Program Files\\GIMP 3\\bin\\gimp-3.0.exe",
      "filter": [".exe", ""],
      "validation": {
        "must_exist": true,
        "executable": true
      }
    },
    "temp_directory": {
      "type": "directory",
      "title": "Temporary Directory",
      "description": "Directory for temporary files",
      "required": true,
      "default": "${TEMP}/gimp-mcp"
    },
    "max_concurrent_processes": {
      "type": "number",
      "title": "Max Concurrent Processes",
      "description": "Maximum number of concurrent GIMP processes (1-10)",
      "required": true,
      "default": 3,
      "minimum": 1,
      "maximum": 10
    },
    "process_timeout": {
      "type": "number",
      "title": "Process Timeout (seconds)",
      "description": "Timeout for GIMP operations in seconds (5-300)",
      "required": true,
      "default": 30,
      "minimum": 5,
      "maximum": 300
    },
    "allowed_directories": {
      "type": "directory",
      "title": "Allowed Directories",
      "description": "Directories that GIMP MCP can access (Ctrl+Click to select multiple)",
      "multiple": true,
      "required": true,
      "default": ["${HOME}/Documents", "${HOME}/Pictures"]
    }
  },
  "tools_generated": true,
  "prompts_generated": false,
  "compatibility": {
    "platforms": ["windows", "macos", "linux"],
    "python_version": ">=3.8"
  },
  "permissions": {
    "filesystem": {
      "read": true,
      "write": true,
      "directories": ["${user_config.temp_directory}", "${user_config.allowed_directories}"]
    },
    "network": {
      "allowed": true,
      "domains": ["api.github.com"]
    },
    "system": {
      "execute_external": true,
      "processes": ["${user_config.gimp_executable}"]
    }
  },
  "dependencies": [
    "fastmcp>=2.10.1,<3.0.0",
    "pydantic>=2.0.0,<3.0.0",
    "pyyaml>=6.0.0,<7.0.0",
    "loguru>=0.7.0,<1.0.0",
    "pillow>=10.0.0,<11.0.0",
    "typing-extensions>=4.0.0,<5.0.0"
  ]
}
