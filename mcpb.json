{
  "name": "gimp-mcp",
  "version": "1.0.0",
  "type": "server",
  "runtime": "python",
  "entry_point": "src/gimp_mcp/server.py",
  "dependencies": [
    "fastmcp>=2.14.4,<3.0.0",
    "gimp-pysi>=0.1.0"
  ],
  "build": {
    "include": [
      "src/**/*",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/",
      ".git/",
      "__pycache__/",
      "*.pyc",
      ".venv/",
      "dist/",
      "build/",
      "target/",
      "docs/",
      "scripts/"
    ]
  },
  "scripts": {
    "build": "mcpb build",
    "pack": "mcpb pack . dist/gimp-mcp.mcpb",
    "test": "python -m pytest"
  }
}